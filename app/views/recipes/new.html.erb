<div class="container-fluid">
  <div class="row">
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" id="nav">
      <ul>
        <div id="nav_elements">
          <li id="profile_image">Profile Image</li>
          <li id="nav_route"><%= link_to @user.first_name, user_path(@user) %></li>
          <li id="nav_route"><%= link_to "Build Menu", new_menu_path %></li>
          <li id="nav_route"><%= link_to "Recipes", recipes_path %></li>
          <li id="nav_route"><%= link_to "People", users_path%></li>
          <li id="nav_route"><%= link_to "Log Out", logout_path, method: :delete %></li>
        </div>
      </ul>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" id="build_menu_content">
                <h1>Make Your Recipe!</h1>
                <%= form_for @recipe, controller: 'recipes', action: 'create' do |f| %>
                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name%>
                </div>
                <div class="form-group">
                  <%= f.label :calories %>
                  <%= f.number_field :calories %>
                </div>
                <div class="form-group">
                  <%= f.label :carbs %>
                  <%= f.number_field :carbs%>
                </div>
                <div class="form-group">
                  <%= f.label :protein %>
                  <%= f.number_field :protein %>
                </div>
                <div class="form-group">
                  <%= f.label :fat %>
                  <%= f.number_field :fat %>
                </div>
                  <%= f.submit "Create Recipe" %>
                <% end %>
    </div>
  </div>
</div>
